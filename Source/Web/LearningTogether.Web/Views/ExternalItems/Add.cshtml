@model LearningTogether.Web.ViewModels.ExternalItems.ExternalItemAddModel

<h2>Add</h2>

@using (Html.BeginForm("Add", "ExternalItems", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.EditorForModel()

    <input type="file" name="file" />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Add" />
            </div>
        </div>
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


